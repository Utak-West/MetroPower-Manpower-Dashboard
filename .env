# MetroPower Manpower Dashboard - Environment Variables
# Development Configuration

# Application Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
APP_NAME=MetroPower Manpower Dashboard
APP_VERSION=1.0.0
COMPANY_NAME=MetroPower
BRANCH_NAME=Tucker Branch

# Logging Configuration
LOG_LEVEL=info

# Database Configuration
# Use in-memory database for development/demo (set to true for easy setup)
USE_MEMORY_DB=true

# PostgreSQL Configuration (for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=metropower_dashboard
DB_USER=postgres
DB_PASSWORD=metropower123
DB_SSL=false

# JWT Configuration
JWT_SECRET=metropower_jwt_secret_development_only_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=metropower_refresh_secret_development_only_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@metropower.com
FROM_NAME=MetroPower Dashboard

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=xlsx,xls,csv,pdf

# Export Configuration
EXPORT_PATH=./exports
EXPORT_RETENTION_DAYS=30

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,https://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# Demo Mode (for testing)
DEMO_MODE_ENABLED=true
